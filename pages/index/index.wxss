/* 1.页面 */
page{
  background-color:white;
}



/* 2.上方栏 */
.kuang_body{
  background-color:#1296db;
  width:100%;
  height: 80px;
}

.title{
  width: 80px;
  height: 40px;
  display:flex;
  align-items: center;
  justify-content: center;
  }

.title_word{
  font-size:20px;
  color:white;
}

.Category{
  display:inline;
  padding-top:20px;
  padding-left: 10px;
}

.category_style{
  width:20px;
  height: 20px;
}


.Search{
  display: inline;
  float: right;
  padding-bottom:10px;
  padding-right: 10px;
}

.search_style{
  width:20px;
  height: 20px;
}





/* 3.备忘录 */

.bei{
  background-color:cornsilk;
  height: 60px;
  color:black;
  border:5px;
  border-radius: 10px;
  margin: 5px 6px 10px 6px; 
  box-shadow: 5px 5px 5px rgb(77, 71, 71);
}

/* 1.备忘录标题 */
.bei_title{
  font-size:18px;
  display:inline;
}

/* 2.备忘录记录时间 */
.bei_recordtime{
  font-size:12px;
  padding-left:5px;
}


/* 3.备忘录收藏 */

.bei_favorite{
  display:inline;
  padding-left:10px;
  float: right;
  padding-right: 5px;
}

.favorite_style{
  width: 20px;
  height: 20px;
}



/* 4.备忘录提醒时间 */
.bei_remind{
  font-size:13px;
  display:inline;
  float:right;
  padding-right: 5px;
}
